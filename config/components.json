{
  "metadata": {
    "component_library": "Vision Glass UI",
    "version": "2.0.0",
    "framework": "Vue 3 + Tailwind CSS v4",
    "design_system": "Apple Vision Pro Glassmorphism",
    "created": "2025-12-07",
    "description": "*A sophisticated, depth-driven interface with heavy frosting and vivid background passthrough.*"
  },

  "design_tokens": {
    "colors": {
      "background": "Mesh Gradients (Deep Blue/Purple)",
      "glass": {
        "surface": "rgba(255, 255, 255, 0.08)",
        "border": "rgba(255, 255, 255, 0.15)",
        "highlight": "rgba(255, 255, 255, 0.2)"
      },
      "text": {
        "primary": "#FFFFFF",
        "secondary": "rgba(255, 255, 255, 0.7)"
      },
      "accent": {
        "primary": "#0A84FF",
        "success": "#30D158",
        "warning": "#FFD60A",
        "danger": "#FF453A"
      }
    },
    "radius": {
      "sm": "12px",
      "md": "20px",
      "lg": "32px",
      "pill": "9999px"
    },
    "blur": {
      "sm": "backdrop-blur-sm (10px)",
      "md": "backdrop-blur-md (25px)",
      "lg": "backdrop-blur-xl (50px)"
    }
  },

  "components": {
    "core_primitives": {
      "GlassCard": {
        "description": "Fundamental content container with variable blur levels.",
        "variants": ["default", "highlight", "ghost"],
        "props": ["padding", "blur", "hoverEffect"],
        "features": ["Variable blur", "Hover lift effect", "Glass border"]
      },
      "CyberButton": {
        "description": "Interactive elements with neon glow hover states.",
        "variants": ["primary", "secondary", "danger", "ghost"],
        "props": ["size", "disabled", "loading", "icon"],
        "features": ["Neon glow hover", "Loading spinner", "Icon support"]
      },
      "NeonInput": {
        "description": "Text fields with inner shadow and glass background.",
        "props": ["modelValue", "label", "placeholder", "type", "icon", "error"],
        "features": ["Inner shadow", "Focus ring", "Error state", "Icon prefix"]
      },
      "FlashDNAProgressBar": {
        "description": "Smooth animated progress bar with glowing leading edge.",
        "props": ["progress", "color", "showLabel", "height"],
        "features": ["Shimmer animation", "Smooth transition", "Color variants"]
      },
      "StatusBadgePulse": {
        "description": "Pill-shaped status indicators with subtle background tints.",
        "variants": ["default", "success", "warning", "danger", "info"],
        "props": ["label", "icon"],
        "features": ["Subtle tint", "Icon support", "Pill shape"]
      },
      "ModalGlassDialog": {
        "description": "Center-aligned dialogs with heavy background dimming.",
        "props": ["isOpen", "title", "maxWidth"],
        "features": ["Backdrop blur", "Entrance animation", "Focus trap"]
      },
      "CyberTooltip": {
        "description": "Floating helper text with glass background.",
        "props": ["text", "position"],
        "features": ["Hover trigger", "Fade animation", "Positioning"]
      },
      "StepIndicator": {
        "description": "Segmented control for switching views.",
        "props": ["tabs", "modelValue"],
        "features": ["Sliding active background", "Icon support"]
      },
      "HexagonSpinner": {
        "description": "Indeterminate loading state.",
        "props": ["size", "color"],
        "features": ["SVG animation", "Size variants"]
      }
    },

    "functional_components": {
      "DeviceStatusPanel": {
        "description": "Real-time ADB/Fastboot status visualization.",
        "status": "planned"
      },
      "LogStreamViewer": {
        "description": "Terminal-like output window with syntax highlighting.",
        "status": "planned"
      },
      "FileDropZone": {
        "description": "Large interactive area for dragging ROM zips.",
        "status": "planned"
      },
      "StepWizard": {
        "description": "Progress stepper for the flashing phases.",
        "status": "planned"
      },
      "AIChatInterface": {
        "description": "Floating chat interface for Gemini integration.",
        "status": "planned"
      },
      "RomSelector": {
        "description": "Grid of cards for selecting firmware versions.",
        "status": "planned"
      },
      "DownloadManager": {
        "description": "List of active downloads with pause/resume.",
        "status": "planned"
      },
      "SettingsPanel": {
        "description": "Configuration form for app preferences.",
        "status": "planned"
      },
      "ThemeAccentPicker": {
        "description": "Allow user to choose the primary vivid accent color.",
        "status": "planned"
      },
      "CommandPalette": {
        "description": "Cmd+K interface for quick actions.",
        "status": "planned"
      }
    }
  }
}
