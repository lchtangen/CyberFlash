  "glass_effects": {
    "light_theme": {
      "base": {
        "background": "rgba(255, 255, 255, 0.7)",
        "backdrop_filter": "blur(20px) saturate(180%)",
        "border": "1px solid rgba(255, 255, 255, 0.2)",
        "box_shadow": "0 8px 32px rgba(31, 38, 135, 0.08), inset 0 1px 1px rgba(255, 255, 255, 0.3)",
        "css": "background: rgba(255, 255, 255, 0.7); backdrop-filter: blur(20px) saturate(180%); border: 1px solid rgba(255, 255, 255, 0.2); box-shadow: 0 8px 32px rgba(31, 38, 135, 0.08), inset 0 1px 1px rgba(255, 255, 255, 0.3);"
      },
      "hover": {
        "background": "rgba(255, 255, 255, 0.8)",
        "border": "1px solid rgba(255, 255, 255, 0.3)",
        "box_shadow": "0 12px 48px rgba(31, 38, 135, 0.12), inset 0 1px 1px rgba(255, 255, 255, 0.4)",
        "transform": "translateY(-2px)",
        "css": "background: rgba(255, 255, 255, 0.8); border: 1px solid rgba(255, 255, 255, 0.3); box-shadow: 0 12px 48px rgba(31, 38, 135, 0.12), inset 0 1px 1px rgba(255, 255, 255, 0.4); transform: translateY(-2px);"
      },
      "floating": {
        "background": "rgba(255, 255, 255, 0.6)",
        "backdrop_filter": "blur(30px) saturate(200%)",
        "border": "1px solid rgba(255, 255, 255, 0.25)",
        "box_shadow": "0 16px 64px rgba(31, 38, 135, 0.1), inset 0 1px 2px rgba(255, 255, 255, 0.4)",
        "css": "background: rgba(255, 255, 255, 0.6); backdrop-filter: blur(30px) saturate(200%); border: 1px solid rgba(255, 255, 255, 0.25); box-shadow: 0 16px 64px rgba(31, 38, 135, 0.1), inset 0 1px 2px rgba(255, 255, 255, 0.4);"
      }
    },
    "dark_theme": {
      "base": {
        "background": "rgba(30, 41, 59, 0.7)",
        "backdrop_filter": "blur(20px) saturate(180%)",
        "border": "1px solid rgba(255, 255, 255, 0.1)",
        "box_shadow": "0 8px 32px rgba(0, 0, 0, 0.2), inset 0 1px 1px rgba(255, 255, 255, 0.08)",
        "css": "background: rgba(30, 41, 59, 0.7); backdrop-filter: blur(20px) saturate(180%); border: 1px solid rgba(255, 255, 255, 0.1); box-shadow: 0 8px 32px rgba(0, 0, 0, 0.2), inset 0 1px 1px rgba(255, 255, 255, 0.08);"
      },
      "hover": {
        "background": "rgba(30, 41, 59, 0.8)",
        "border": "1px solid rgba(255, 255, 255, 0.15)",
        "box_shadow": "0 12px 48px rgba(0, 0, 0, 0.3), inset 0 1px 1px rgba(255, 255, 255, 0.1)",
        "transform": "translateY(-2px)",
        "css": "background: rgba(30, 41, 59, 0.8); border: 1px solid rgba(255, 255, 255, 0.15); box-shadow: 0 12px 48px rgba(0, 0, 0, 0.3), inset 0 1px 1px rgba(255, 255, 255, 0.1); transform: translateY(-2px);"
      },
      "floating": {
        "background": "rgba(30, 41, 59, 0.6)",
        "backdrop_filter": "blur(30px) saturate(200%)",
        "border": "1px solid rgba(255, 255, 255, 0.12)",
        "box_shadow": "0 16px 64px rgba(0, 0, 0, 0.3), inset 0 1px 2px rgba(255, 255, 255, 0.05)",
        "css": "background: rgba(30, 41, 59, 0.6); backdrop-filter: blur(30px) saturate(200%); border: 1px solid rgba(255, 255, 255, 0.12); box-shadow: 0 16px 64px rgba(0, 0, 0, 0.3), inset 0 1px 2px rgba(255, 255, 255, 0.05);"
      }
    }
